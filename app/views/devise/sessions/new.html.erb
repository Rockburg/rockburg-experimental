<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'w-1/2') do |f| %>
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/6">
      <%= f.label :email, class: 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4' %>
    </div>
    <div class="md:w-5/6">
      <%= f.email_field :email, autocomplete: "email", class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue' %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/6">
      <%= f.label :password, class: 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4' %>
    </div>
    <div class="md:w-5/6">
      <%= f.password_field :password, autocomplete: "current-password", class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="md:flex mb-6">
      <div class="md:w-1/6"></div>
      <label class="md:w-5/6 block text-gray-500 font-bold">
        <%= f.check_box :remember_me, class: 'mr-2 leading-tight' %>
        <span class="text-sm">
          Remember me?
        </span>
      </label>
    </div>
  <% end %>

  <div class="md:flex md:items-center">
    <div class="md:w-1/6"></div>
    <div class="md:w-5/6">
      <%= f.submit "Log in", class: 'bg-blue text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-darker border-2 border-blue-darker cursor-pointer button' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
